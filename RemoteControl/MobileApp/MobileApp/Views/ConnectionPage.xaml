<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.ConnectionPage"
			 xmlns:controls="clr-namespace:MobileApp.Controls"
			 Title="Presenter">
	<ContentPage.Content>
		<StackLayout>
			<Entry x:Name="Address" Margin="0,5,0,0" Text="{Binding Address}" HorizontalTextAlignment="Center"/>
			<Button Margin="0,5,0,0" Text="Connect" Clicked="Button_Clicked" BackgroundColor="{StaticResource Primary}" TextColor="White"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>